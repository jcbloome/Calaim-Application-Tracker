rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to their own user_uploads folder
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.admin == true ||
        firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid)) ||
        firestore.exists(/databases/(default)/documents/roles_admin/$(request.auth.uid)) ||
        firestore.exists(/databases/(default)/documents/roles_super_admin/$(request.auth.uid))
      );
    }
    
    // Allow authenticated users to upload to shared folders (admin only)
    match /shared_uploads/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid)) ||
          firestore.exists(/databases/(default)/documents/roles_admin/$(request.auth.uid)) ||
          firestore.exists(/databases/(default)/documents/roles_super_admin/$(request.auth.uid))
        );
    }
    
    // Allow authenticated users to upload documents (admin only)
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid)) ||
          firestore.exists(/databases/(default)/documents/roles_admin/$(request.auth.uid)) ||
          firestore.exists(/databases/(default)/documents/roles_super_admin/$(request.auth.uid))
        );
    }
    
    // Allow diagnostic tests (temporary, user-specific)
    match /diagnostic-test/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}