{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "The user's unique ID." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's full name." },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" }
      },
      "required": ["id", "email"]
    },
    "Application": {
      "title": "Application",
      "description": "Represents a CalAIM application.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "memberFirstName": { "type": "string" },
        "memberLastName": { "type": "string" },
        "status": { "type": "string", "enum": ["In Progress", "Completed & Submitted", "Requires Revision", "Approved", "Deleted"] },
        "submissionDate": { "type": "string", "format": "date-time" },
        "lastUpdated": { "type": "string", "format": "date-time" },
        "pathway": { "type": "string", "enum": ["SNF Transition", "SNF Diversion"] },
        "healthPlan": { "type": "string", "enum": ["Kaiser", "Health Net", "Other", "Kaiser Permanente"] },
        "forms": { 
            "type": "array", 
            "items": { "$ref": "#/entities/FormStatus" }
        }
      },
      "required": ["id", "userId", "memberFirstName", "memberLastName", "status", "pathway", "healthPlan"]
    },
    "FormStatus": {
        "title": "FormStatus",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "status": { "type": "string", "enum": ["Pending", "Completed"] },
            "type": { "type": "string", "enum": ["Form", "Upload", "Info", "online-form", "bundle"] }
        }
    },
    "Role": {
        "title": "Role",
        "type": "object",
        "properties": {
            "grantedAt": { "type": "string", "format": "date-time" }
        }
    },
    "SystemSettings": {
      "title": "SystemSettings",
      "type": "object",
      "properties": {
        "recipientUids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "schema": { "$ref": "#/entities/User" },
        "description": "Stores user profile information."
      },
      {
        "path": "/users/{userId}/applications/{applicationId}",
        "schema": { "$ref": "#/entities/Application" },
        "description": "Stores applications submitted by a user."
      },
      {
        "path": "/roles_admin/{userId}",
        "schema": { "$ref": "#/entities/Role" },
        "description": "Stores UIDs of users with Admin role."
      },
      {
        "path": "/roles_super_admin/{userId}",
        "schema": { "$ref": "#/entities/Role" },
        "description": "Stores UIDs of users with Super Admin role."
      },
      {
        "path": "/system_settings/notifications",
        "schema": { "$ref": "#/entities/SystemSettings" },
        "description": "System-wide notification settings."
      }
    ]
  }
}
