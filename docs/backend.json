{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "A user of the application.",
      "properties": {
        "id": { "type": "string", "description": "Unique user ID." },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" }
      },
      "required": ["id", "email"]
    },
    "Application": {
      "title": "Application",
      "type": "object",
      "description": "A CalAIM application submitted by a user.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "status": { "type": "string", "enum": ["In Progress", "Completed & Submitted", "Requires Revision", "Approved", "Deleted"] },
        "memberFirstName": { "type": "string" },
        "memberLastName": { "type": "string" }
      },
      "required": ["id", "userId", "status"]
    },
    "AdminRole": {
      "title": "AdminRole",
      "type": "object",
      "properties": { "grantedAt": { "type": "string", "format": "date-time" } }
    },
    "SuperAdminRole": {
      "title": "SuperAdminRole",
      "type": "object",
      "properties": { "grantedAt": { "type": "string", "format": "date-time" } }
    }
  },
  "auth": { "providers": ["password", "anonymous"] },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores public profile information for a user."
    },
    "/users/{userId}/applications/{applicationId}": {
      "schema": { "$ref": "#/entities/Application" },
      "description": "Sub-collection for applications belonging to a user."
    },
    "/roles_admin/{userId}": {
      "schema": { "$ref": "#/entities/AdminRole" },
      "description": "Collection where document ID is a user UID that has the Admin role."
    },
    "/roles_super_admin/{userId}": {
      "schema": { "$ref": "#/entities/SuperAdminRole" },
      "description": "Collection where document ID is a user UID that has the Super Admin role."
    }
  }
}
