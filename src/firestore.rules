
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    //         Helper Functions
    // =================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_super_admin/$(request.auth.uid));
    }

    // =================================
    //         Collection Rules
    // =================================
    
    // A user can read/write anything within their own data path.
    // Admins and Super Admins can read/write anything in any user's data path.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId) || isAdmin() || isSuperAdmin();
    }
    
    // Explicitly deny anyone from listing all users to prevent user enumeration.
    match /users/{userId} {
        allow list: if false;
    }

    // This rule allows collection group queries on 'applications' for admins.
    // This is needed for the "All Applications" view in the admin dashboard.
    match /{path=**}/applications/{applicationId} {
      allow get: if isAdmin() || isSuperAdmin();
    }

    // Only Super Admins can manage admin and super admin roles.
    match /roles_admin/{userId} {
      allow read, write: if isSuperAdmin();
    }
    match /roles_super_admin/{userId} {
        allow read, write: if isSuperAdmin();
    }

    // System settings can be read by any signed-in user but only written by Super Admins.
    match /system_settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
  }
}
