
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    //         Helper Functions
    // =================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_super_admin/$(request.auth.uid));
    }

    // =================================
    //         Collection Rules
    // =================================
    
    // Rule 1: Users can read and write documents within their own user folder.
    // This covers their user profile and their own subcollections like 'applications'.
    match /users/{userId}/{documents=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Rule 2: Admins are allowed to perform collection group queries on 'applications'.
    // This is essential for the admin dashboard to view all applications across all users.
    match /{path=**}/applications/{applicationId} {
      allow get, list: if isAdmin() || isSuperAdmin();
    }
    
    // Rule 3: Admins can read user profile documents (but not subcollections via this rule).
    // This allows admins to see basic user info like names for the application list.
    match /users/{userId} {
        allow get, list: if isAdmin() || isSuperAdmin();
    }

    // Rule 4: Only Super Admins can manage roles.
    match /roles_admin/{adminId} {
      allow read, write: if isSuperAdmin();
    }
    match /roles_super_admin/{superAdminId} {
        allow read, write: if isSuperAdmin();
    }

    // Rule 5: System settings can be read by any signed-in user, but only written by Super Admins.
    match /system_settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
  }
}
