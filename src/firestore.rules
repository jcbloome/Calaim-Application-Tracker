
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    //         Helper Functions
    // =================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_super_admin/$(request.auth.uid));
    }

    // =================================
    //         Collection Rules
    // =================================
    
    // User can read and write their own user document and all subcollections (e.g., applications)
    match /users/{userId}/{documents=**} {
      allow read, write: if isOwner(userId);
    }
    
    // This allows collection group queries on 'applications' for admins.
    match /{path=**}/applications/{applicationId} {
      allow get, list: if isAdmin() || isSuperAdmin();
    }
    
    // Admins can read/write any user document. This is needed for the admin dashboard.
    match /users/{userId} {
        allow get, list: if isAdmin() || isSuperAdmin();
    }

    // Only Super Admins can manage admin and super admin roles.
    match /roles_admin/{adminId} {
      allow read, write: if isSuperAdmin();
    }
    match /roles_super_admin/{superAdminId} {
        allow read, write: if isSuperAdmin();
    }

    // System settings can be read by any signed-in user but only written by Super Admins.
    match /system_settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
  }
}
