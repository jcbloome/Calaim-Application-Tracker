
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    //         Helper Functions
    // =================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_super_admin/$(request.auth.uid));
    }

    // =================================
    //         Collection Rules
    // =================================

    // Rule for the user's own document.
    // Allows a user to read/write their profile info.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId) || isAdmin() || isSuperAdmin();
      allow create: if isSignedIn();
    }
    
    // CRITICAL FIX: Explicitly allow all operations on the applications subcollection for the owner.
    // This is required for `list` (collection query) to work.
    match /users/{userId}/applications/{applicationId} {
      allow read, write: if isOwner(userId) || isAdmin() || isSuperAdmin();
    }
    
    // This rule allows collection group queries on 'applications' for admins.
    // This is needed for the "All Applications" view in the admin dashboard.
    match /{path=**}/applications/{applicationId} {
      allow get, list: if isAdmin() || isSuperAdmin();
    }

    // Only Super Admins can manage admin and super admin roles.
    match /roles_admin/{userId} {
      allow read, write: if isSuperAdmin();
    }
    match /roles_super_admin/{userId} {
        allow read, write: if isSuperAdmin();
    }

    // System settings can be read by any signed-in user but only written by Super Admins.
    match /system_settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
  }
}
