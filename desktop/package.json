{
  "name": "calaim-desktop",
  "version": "3.0.10",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "electron dist/main.js",
    "dev": "npm run build && electron dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist:win": "npm run build && electron-builder --win",
    "publish:win": "npm run dist:win && node -e \"const v=require('./package.json').version; const {execSync}=require('child_process'); const cmd=`gh release upload v${v} \\\"release/Connect CalAIM Desktop Setup ${v}.exe\\\" \\\"release/Connect CalAIM Desktop Setup ${v}.exe.blockmap\\\" \\\"release/latest.yml\\\" --clobber`; execSync(cmd,{stdio:'inherit'});\""
  },
  "build": {
    "appId": "com.connectionsilos.calaimdesktop",
    "productName": "Connect CalAIM Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "assets/**",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/tray.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Connect CalAIM Desktop"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jcbloome",
        "repo": "Calaim-Application-Tracker"
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5"
  }
}
