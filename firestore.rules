
// VERSION 5 - FINAL ADMIN FIX
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- COLLECTION GROUP RULES ---

    // 5. Allow Admins to list ALL applications across all users.
    // This is CRITICAL for the admin dashboard.
    match /{path=**}/applications/{applicationId} {
      allow list: if isAdmin();
    }


    // --- STANDARD RULES ---

    // 1. User Documents: Allows owner access immediately to prevent login crashes
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      // 2. Applications: Let users manage their own applications.
      match /applications/{applicationId} {
        allow read, list, write, delete: if isOwner(userId) || isAdmin();

        // 3. Staff Trackers: Restricts sensitive tracking data to admins only
        match /staffTrackers/{trackerId} {
          allow read, list, write: if isAdmin();
        }
      }
    }

    // 4. Admin Role Verification: Managed via Firebase Console
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
    
    // Allow any signed-in user to write to the test collection
    match /test_writes/{docId} {
        allow read, write: if isSignedIn();
    }
  }
}
