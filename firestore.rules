rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- VERSION 4 RULES ---

    // 1. User Documents: Allows immediate access for the owner
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow read, write: if isAdmin();

      // 2. Applications: Grants 'list' permission so your dashboard can load tables
      match /applications/{applicationId} {
        allow read, list, write, delete: if isOwner(userId);
        allow read, list, write, delete: if isAdmin();

        // 3. Nested Staff Trackers: Restricts sensitive data to admins
        match /staffTrackers/{trackerId} {
          allow read, list, write: if isAdmin();
        }
      }
    }
    
    match /test_writes/{docId} {
      allow read, write: if isSignedIn();
    }

    // 4. Admin Role Verification: Restricts who can grant admin status
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false; // Must be managed via Firebase Console
    }

     match /roles_super_admin/{uid} {
        allow get: if isSignedIn() && request.auth.uid == uid;
    }
  }
}