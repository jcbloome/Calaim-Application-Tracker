rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny. Add explicit collection rules below.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Social Workers collection - admin management only
    match /socialWorkers/{socialWorkerId} {
      // Super admins can manage social worker accounts
      allow read, write: if request.auth != null;
      
      // Social workers can read their own profile
      allow read: if request.auth != null && request.auth.uid == socialWorkerId;
      
      // Allow updating last login timestamp
      allow update: if request.auth != null && 
                    request.auth.uid == socialWorkerId &&
                    request.writeFields.hasOnly(['lastLogin']);
    }
    
    // Synced Social Workers collection - super admin only
    match /syncedSocialWorkers/{syncedWorkerId} {
      // Super admins can manage synced social worker data
      allow read, write: if request.auth != null && 
                         request.auth.token.email in ['jason@carehomefinders.com'];
    }
    
    // SW Claims collection
    match /sw-claims/{claimId} {
      // Social workers can create and read their own claims
      allow create: if request.auth != null && 
                    request.auth.uid != null &&
                    request.resource.data.socialWorkerEmail == request.auth.token.email;
      
      allow read: if request.auth != null && 
                  (resource.data.socialWorkerEmail == request.auth.token.email ||
                   // Super admins can read all claims
                   request.auth.token.email in ['jason@carehomefinders.com']);
      
      // Only super admins can update claim status
      allow update: if request.auth != null && 
                    request.auth.token.email in ['jason@carehomefinders.com'];
      
      // Super admins can delete claims
      allow delete: if request.auth != null && 
                    request.auth.token.email in ['jason@carehomefinders.com'];
    }

    // Desktop Presence (Electron online indicator)
    match /desktop_presence/{uid} {
      allow read, list: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == uid;
      allow delete: if request.auth != null && request.auth.token.email in ['jason@carehomefinders.com'];
    }

    // Staff Chat (Firestore source of truth)
    match /chat_conversations/{conversationId} {
      function isAdmin() {
        return request.auth != null && (
          request.auth.token.email in ['jason@carehomefinders.com'] ||
          exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
          exists(/databases/$(database)/documents/roles_super_admin/$(request.auth.uid))
        );
      }

      function isParticipant() {
        return request.auth != null && request.auth.uid in resource.data.participants;
      }

      function isParticipantCreate() {
        return request.auth != null && request.auth.uid in request.resource.data.participants;
      }

      allow get, list: if isAdmin() || isParticipant();
      allow create: if isAdmin() || isParticipantCreate();
      allow update, delete: if isAdmin() || isParticipant();

      match /messages/{messageId} {
        allow get, list: if isAdmin() || (
          request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chat_conversations/$(conversationId)).data.participants
        );
        allow create: if isAdmin() || (
          request.auth != null &&
          request.resource.data.senderUid == request.auth.uid &&
          request.auth.uid in get(/databases/$(database)/documents/chat_conversations/$(conversationId)).data.participants
        );
        allow update, delete: if isAdmin();
      }
    }
  }
}