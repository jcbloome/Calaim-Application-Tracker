
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    match /test_writes/{docId} {
      allow read, write: if isSignedIn();
    }
    
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      // Admins can read user profiles
      allow get: if isAdmin();
      allow list: if isAdmin();
    }

    match /users/{userId}/applications/{appId} {
      allow read, write: if isOwner(userId);
      // Admins can read any application
      allow get: if isAdmin();
      allow list: if isAdmin();
    }

    // Admins need to read these roles collections
    match /roles_admin/{uid} {
        allow get: if isAdmin();
    }
     match /roles_super_admin/{uid} {
        allow get: if isAdmin();
    }

    // Allow admins to read system settings
    match /system_settings/notifications {
        allow get: if isAdmin();
    }
    
    // The following rules are from the original file and are not currently used by the app,
    // but are kept to avoid breaking changes if they become needed.
    match /gitCommits/{commitId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;

      match /projectFiles/{fileId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
      }

      match /restoreLogs/{logId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
      }
    }
     match /applications/{appId} {
        allow list, get: if isAdmin();
     }
  }
}
