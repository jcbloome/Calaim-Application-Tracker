
// VERSION 4 - RESTORED JAN 1ST LOGIC
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- RULES ---

    // 1. User Documents: Allows owner access immediately to prevent login crashes
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow read, write: if isAdmin();

      // 2. Applications: Explicit 'list' permission for dashboard tables
      match /applications/{applicationId} {
        allow read, list, write, delete: if isOwner(userId);
        allow read, list, write, delete: if isAdmin();

        // 3. Staff Trackers: Restricts sensitive tracking data to admins only
        match /staffTrackers/{trackerId} {
          allow read, list, write: if isAdmin();
        }
      }
    }

    // 4. Admin Role Verification: Managed via Firebase Console
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
  }
}
