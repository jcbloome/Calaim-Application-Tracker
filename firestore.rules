
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // --- COLLECTION GROUP RULES ---
    
    // Rule to allow Admins to list ALL applications across ALL users.
    // This is CRITICAL for the admin dashboard to function.
    match /{path=**}/applications/{applicationId} {
      allow list: if isAdmin();
    }


    // --- STANDARD RULES ---

    // 1. User Documents: Allows owner access immediately. Admins can also read/write user profiles.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      // 2. Applications: Let users manage their own applications. Admins can also fully manage them.
      // Note: The 'list' permission here is for listing apps for a SINGLE user.
      // The collectionGroup rule above handles listing ALL apps.
      match /applications/{applicationId} {
        allow read, write, delete: if isOwner(userId) || isAdmin();

        // 3. Staff Trackers: Restricts sensitive tracking data to admins only
        match /staffTrackers/{trackerId} {
          allow read, list, write: if isAdmin();
        }
      }
    }

    // 4. Admin Role Verification: Only allow reading roles. Writing is managed via Firebase Console/server-side.
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
    
    // Allow any signed-in user to perform all operations on the test collection.
    match /test_writes/{docId} {
        allow write: if isSignedIn();
    }
  }
}
