rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_super_admin/$(request.auth.uid));
    }

    // --- RULES ---

    // This rule is CRITICAL for the admin dashboard.
    // It allows a user with an 'admin' role to query the 'applications' collection group.
    match /{path=**}/applications/{applicationId} {
      allow list: if isAdmin();
    }

    // User-specific rules.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      // Application rules for owners and admins.
      match /applications/{applicationId} {
        allow read, write, delete: if isOwner(userId) || isAdmin();

        // Staff trackers are restricted to admins.
        match /staffTrackers/{trackerId} {
          allow read, list, write, delete: if isAdmin();
        }
      }
    }
    
    // Test collection is writable by any signed-in user or admin.
    match /test_writes/{docId} {
      allow read, write: if isSignedIn() || isAdmin();
    }
    
    // System settings can be read by any signed-in user, but only modified by super admins.
    match /system_settings/{docId} {
        allow get: if isSignedIn();
        allow list, write, delete: if isSuperAdmin();
    }

    // Role documents can only be read by the user they belong to, or by a super admin.
    match /roles_admin/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin();
      allow list, create, update, delete: if isSuperAdmin();
    }
    
    match /roles_super_admin/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin();
      allow list, create, update, delete: if isSuperAdmin();
    }
  }
}
